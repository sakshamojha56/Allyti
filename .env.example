# =============================================================================
# ALLYTI ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=Allyti
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Professional Section)
DATABASE_URL=postgresql://username:password@localhost:5432/allyti_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=allyti_dev
DB_USER=username
DB_PASSWORD=password

# MongoDB (Anonymous Section)
MONGODB_URL=mongodb://username:password@localhost:27017/allyti_anonymous
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_NAME=allyti_anonymous
MONGODB_USER=username
MONGODB_PASSWORD=password

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch (Search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Anonymous Section Security
ANONYMOUS_JWT_SECRET=your-anonymous-section-secret-key
ANONYMOUS_TOKEN_EXPIRES_IN=24h

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_SALT_ROUNDS=12

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-oauth-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-oauth-client-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Templates
FROM_EMAIL=noreply@allyti.com
FROM_NAME=Allyti Platform

# Email Verification
EMAIL_VERIFICATION_SECRET=your-email-verification-secret
EMAIL_VERIFICATION_EXPIRES_IN=24h

# =============================================================================
# FILE STORAGE
# =============================================================================

# Local Storage (Development)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=allyti-media-bucket
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-key
APNS_KEY_ID=your-apple-push-notification-key-id
APNS_TEAM_ID=your-apple-team-id

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
SENTRY_DSN=your-sentry-dsn-url

# Content Moderation
PERSPECTIVE_API_KEY=your-google-perspective-api-key
OPENAI_API_KEY=your-openai-api-key-for-moderation

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limits
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Anonymous Section Rate Limits
ANONYMOUS_RATE_LIMIT_WINDOW_MS=600000  # 10 minutes
ANONYMOUS_RATE_LIMIT_MAX_REQUESTS=50

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# Socket.IO
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_MAX_CONNECTIONS=1000

# Chat Configuration
MAX_MESSAGE_LENGTH=1000
MAX_ROOM_PARTICIPANTS=100
MESSAGE_HISTORY_RETENTION_DAYS=30

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging
LOG_LEVEL=debug  # error, warn, info, debug
LOG_FORMAT=combined  # combined, common, dev, short, tiny

# Health Checks
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
METRICS_ENDPOINT=/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_DEBUG_LOGS=true

# Seed Data
ENABLE_SEED_DATA=true
SEED_ADMIN_EMAIL=admin@allyti.com
SEED_ADMIN_PASSWORD=admin123456

# Mock Services (for testing)
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false
MOCK_PAYMENT_SERVICE=false

# =============================================================================
# INSTITUTIONAL VERIFICATION
# =============================================================================

# IIT Email Domains (comma-separated)
IIT_EMAIL_DOMAINS=iitb.ac.in,iitd.ac.in,iitk.ac.in,iitm.ac.in,iitkgp.ac.in,iitg.ac.in,iitbhu.ac.in,iitbbs.ac.in,iith.ac.in,iiti.ac.in,iitp.ac.in,iitj.ac.in,iitpkd.ac.in,iitmandi.ac.in,iitrpr.ac.in,iitgoa.ac.in,iitdh.ac.in,iittdm.ac.in,iitbhilai.ac.in,iitgn.ac.in,iitjmu.ac.in,iittirupati.ac.in,iitdm.ac.in

# IIM Email Domains (comma-separated)
IIM_EMAIL_DOMAINS=iima.ac.in,iimb.ac.in,iimc.ac.in,iiml.ac.in,iimi.ac.in,iimk.ac.in,iims.ac.in,iimahd.ernet.in,iimr.ac.in,iimu.ac.in,iimv.ac.in,iimtrichy.ac.in,iimudaipur.ac.in,iimn.ac.in,iimamritsar.ac.in,iimjammu.ac.in,iimbodhgaya.ac.in,iimsambalpur.ac.in,iimsirmaur.ac.in,iimvisakhapatnam.ac.in

# Document Verification
ENABLE_DOCUMENT_VERIFICATION=true
VERIFICATION_DOCUMENTS_BUCKET=allyti-verification-docs

# Alumni Database Integration
ALUMNI_DB_API_URL=https://api.alumni-database.com
ALUMNI_DB_API_KEY=your-alumni-database-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Professional Section Features
ENABLE_PROFESSIONAL_POSTS=true
ENABLE_JOB_BOARD=true
ENABLE_DIRECT_MESSAGING=true
ENABLE_VIDEO_CALLS=true
ENABLE_SKILL_ENDORSEMENTS=true

# Anonymous Section Features
ENABLE_ANONYMOUS_POSTS=true
ENABLE_ANONYMOUS_CHAT=true
ENABLE_VOTING_SYSTEM=true
ENABLE_COMMUNITY_MODERATION=true

# AI Features
ENABLE_AI_MODERATION=true
ENABLE_CONTENT_RECOMMENDATIONS=true
ENABLE_SMART_MATCHING=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Caching
CACHE_TTL_SECONDS=3600  # 1 hour
CACHE_MAX_ITEMS=10000

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=300000

# Search Configuration
SEARCH_MAX_RESULTS=50
SEARCH_TIMEOUT_MS=5000

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# App Store Configuration
IOS_APP_ID=your-ios-app-id
ANDROID_PACKAGE_NAME=com.allyti.app

# Deep Links
DEEP_LINK_SCHEME=allyti
UNIVERSAL_LINK_DOMAIN=allyti.com

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/allyti_test
TEST_MONGODB_URL=mongodb://localhost:27017/allyti_test_anonymous

# Test Environment
TEST_JWT_SECRET=test-jwt-secret-for-testing-only
TEST_ENCRYPTION_KEY=test-encryption-key-32-characters

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These will be set differently in production

# Security
SESSION_SECRET=production-session-secret-very-long-and-random
CORS_ORIGIN=https://allyti.com,https://www.allyti.com

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# CDN
STATIC_ASSETS_CDN=https://cdn.allyti.com

# Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key
